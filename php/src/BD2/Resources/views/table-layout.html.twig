{% if not pagination.getDirection() %}
    {% set direction = {'direction': 'asc'} %}
{% else %}
    {% set direction = [] %}
{% endif %}

<div class="row ajax-content">
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    {% block tableHeader %}{% endblock %}
                </tr>
            </thead>
            <tbody>
                {% for item in data %}
                    <tr>
                        {% block tableContent %}{% endblock %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {{ knp_pagination_render(pagination) }}
    </div>
</div>
