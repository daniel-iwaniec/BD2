{% extends 'table-layout.html.twig' %}

{% block tableFiltration %}
    {{ knp_pagination_filter(pagination, {
        'ID': 'id',
        'NAZWA': 'nazwa'
    }, {'button': 'Szukaj'}) }}
{% endblock %}

{% block tableHeader %}
    <th><abbr title="INTEGER">{{ knp_pagination_sortable(pagination, 'id', 'ID', [], direction) }}</abbr></th>
    <th><abbr title="VARCHAR2(200)">{{ knp_pagination_sortable(pagination, 'nazwa', 'NAZWA') }}</abbr></th>
{% endblock %}

{% block tableContent %}
    <td><b>{{ item.ID }}</b></td>
    <td>{{ item.NAZWA }}</td>
{% endblock %}
